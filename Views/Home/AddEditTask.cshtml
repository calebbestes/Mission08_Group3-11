@{
}

@model Application

<h1>Add a Task </h1>

<form method="post">

    <input type="hidden" asp-for="TaskId" />

    <label asp-for="Task">Task:</label>
    <input asp-for="Task"/>
    <br/>

    <label asp-for="DueDate">Due Date:</label>
    <input asp-for="DueDate" />
    <br/>

    <label asp-for="Quadrant">Quadrant:</label>
    <input asp-for="Quadrant" value = "1"/>
    <br/>

    <select asp-for="CategoryId">
        <option value="">Select a Category</option>
       @foreach (Category m in ViewBag.Categories)
        {
            <option value="@m.CategoryId">@m.CategoryName</option>
        }
    </select>
    <br />

    <label asp-for="Completed">Completed:</label>
    <input asp-for="Completed" type="checkbox"/>
    <br/>

    <div asp-validation-summary="All"></div>

    <button type="submit">Submit Application</button>

</form>