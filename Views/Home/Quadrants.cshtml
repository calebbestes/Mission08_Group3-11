@model List<Application>

<div class="container quadrant-container">
    <div class="row">
        <div class="col-1"></div>
        <div class="col quadrant-col-title">
            <h2>Urgent</h2>
        </div>
        <div class="col quadrant-col-title">
            <h2>Not Urgent</h2>
        </div>
    </div>

    <div class="row">
        <div class="col-1 quadrant-row-title">
            <h2>Important</h2>
        </div>
        <div class="col quadrant">
            <h3>Quadrant 1</h3>
            <ul>
            @foreach (var x in Model)
            {
                @* if matches current quadrant and not completed *@
                if (x.Quadrant == 1 && x.Completed == false)
                {

                        <li>
                            @x.Task @x.DueDate<a asp-controller="Home" asp-action="Edit" asp-route="@x.TaskId">Edit</a>
                            <a asp-controller="Home" asp-action="Delete" asp-route="@x.TaskId">Delete</a>
                        </li>
                
                }
            }
            </ul>
        </div>
        <div class="col quadrant">
            <h3>Quadrant 2</h3>
            <ul>
                @foreach (var x in Model)
                {
                    @* if matches current quadrant and not completed *@
