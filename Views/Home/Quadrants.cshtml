                            <a asp-controller="Home" asp-action="Delete" asp-route="@x.TaskId">Delete</a>
                        </li>

                    }
                }
            </ul>
        </div>
    </div>

    <div class="row">
        <div class="col-1 quadrant-row-title">
            <h2>Not Important</h2>
        </div>
        <div class="col quadrant">
            <h3>Quadrant 3</h3>
