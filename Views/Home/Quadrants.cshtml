                            @x.Task @x.DueDate<a asp-controller="Home" asp-action="Edit" asp-route="@x.TaskId">Edit</a>
                            <a asp-controller="Home" asp-action="Delete" asp-route="@x.TaskId">Delete</a>
                        </li>

                    }
                }
            </ul>
        </div>
        <div class="col quadrant">
            <h3>Quadrant 4</h3>
            <ul>
                @foreach (var x in Model)
                {
                    @* if matches current quadrant and not completed *@
                    if (x.Quadrant == 4 && x.Completed == false)
                    {

                        <li>
                            @x.Task @x.DueDate<a asp-controller="Home" asp-action="Edit" asp-route="@x.TaskId">Edit</a>
                            <a asp-controller="Home" asp-action="Delete" asp-route="@x.TaskId">Delete</a>
                        </li>

                    }
                }
            </ul>
        </div>
    </div>
    
</div>