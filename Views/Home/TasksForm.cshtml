@{
}

@model Application

<h1>Tasks Form</h1>

<form method="post">

    <label asp-for="Task">Task:</label>
    <input asp-for="Task"/>
    <br/>

    <label asp-for="DueDate">Due Date:</label>
    <input asp-for="DueDate" />
    <br/>

    <label asp-for="Quadrant">Quadrant:</label>
    <input asp-for="Quadrant"/>
    <br/>

    <label asp-for="Category">Category:</label>
    <select asp-for="Category">
        <option>Home</option>
        <option>School</option>
        <option>Work</option>
        <option>Church</option>
    </select>
    <br />

    <label asp-for="Completed">Completed:</label>
    <select asp-for="Completed">
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select>
    <br/>

    <button type="submit">Submit Application</button>

</form>